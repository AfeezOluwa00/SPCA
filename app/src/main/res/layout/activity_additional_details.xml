<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/shippingAddressEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Shipping Address"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/cardNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Card Name"
        android:layout_below="@id/shippingAddressEditText"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/cardNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Card Number"
        android:layout_below="@id/cardNameEditText"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/cvvEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CVV"
        android:layout_below="@id/cardNumberEditText"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/expiryDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Expiry Date"
        android:layout_below="@id/cvvEditText"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_below="@id/expiryDateEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

</RelativeLayout>
