    <!-- Price TextView -->
    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>

    <!-- Quantity TextView -->
    <TextView
        android:id="@+id/textViewQuantity"
        android:layout_width="wrap_content"
